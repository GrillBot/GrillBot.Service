    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "winston": "^3.8.2",
    "canvas": "^2.11.2",
    "color": "4.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-actuator": "^1.8.0",
    "@types/node": "^20.12.11",
    "nodemon": "^3.1.0",
